?lang=soar_IR
?langver=1.2.0

INIT

STALLOC A
SET F A 
SET B 3

CALL 2 @_factorial

PUT [F]

func @_factorial
    IFEQL _ARG0 1
        SET [_RTADDR] 1
        RET
        BREAKFN
    END
    
    PUSH _ARG0
    STALLOC A 
    SET B _ARG0
    DEC B
    
    CALL 2 @_factorial

    MUL [SP]-16 [SP-8]
    SET [_RTADDR] [SP-16]
    RET
endfunc